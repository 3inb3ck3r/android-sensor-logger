<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="at.jku.cp.feichtinger.sensorLogger" android:versionCode="1"
	android:versionName="1.0">
	<uses-sdk android:minSdkVersion="10" />

	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />

	<application android:icon="@drawable/icon" android:label="@string/app_name"
		android:theme="@android:style/Theme.Black">
		<activity android:name=".SensorLoggerMainActivity"
			android:label="@string/app_name" android:configChanges="orientation">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".activities.PreferencesActivity"
			android:label="@string/settings">

		</activity>

		<activity android:name=".activities.SensorVisualizerActivity">

		</activity>

		<activity android:name=".activities.ActivityManagerActivity">

		</activity>


		<service android:name=".services.RecorderService" />

	</application>
</manifest>